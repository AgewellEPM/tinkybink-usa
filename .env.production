# TinkyBink Connect Pro Suite - Production Environment Template
# Copy this to .env.production and update with your actual values

# Core Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://yourdomain.com
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=your-32-character-secret-key-here

# Database (MySQL for Bluehost)
DATABASE_URL="mysql://username:password@localhost:3306/tinkybink_prod"
DB_HOST=localhost
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_NAME=tinkybink_prod

# Stripe Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key
STRIPE_SECRET_KEY=sk_live_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# OpenAI for AI Features
OPENAI_API_KEY=sk-your-openai-api-key

# Email Service (Bluehost SMTP)
SMTP_HOST=mail.yourdomain.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your_email_password
FROM_EMAIL=noreply@yourdomain.com

# Healthcare APIs
NPI_REGISTRY_API_KEY=your-cms-npi-registry-key
PECOS_API_KEY=your-pecos-api-key

# Analytics
GOOGLE_ANALYTICS_ID=GA-your-tracking-id
MIXPANEL_TOKEN=your-mixpanel-token

# Security
ENCRYPTION_KEY=your-32-character-encryption-key
JWT_SECRET=your-jwt-secret-key

# Feature Flags
ENABLE_LEAD_MARKETPLACE=true
ENABLE_BILLING_TOOLKIT=true
ENABLE_ENTERPRISE_FEATURES=true
ENABLE_AI_FEATURES=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/*,application/pdf

# Session Configuration
SESSION_SECRET=your-session-secret
SESSION_MAX_AGE=2592000000

# Monitoring
SENTRY_DSN=https://your-sentry-dsn
LOG_LEVEL=info