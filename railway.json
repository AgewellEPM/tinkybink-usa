{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "rm -rf .next && rm -rf node_modules/.cache && npm ci --cache /tmp/.npm && NODE_OPTIONS='--max-old-space-size=4096' npm run build"
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "always"
  },
  "environments": {
    "NODE_ENV": "production",
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "DISABLE_ESLINT_PLUGIN": "true",
    "GENERATE_SOURCEMAP": "false",
    "CACHE_BUST": "2025-08-10-v4-clean"
  }
}