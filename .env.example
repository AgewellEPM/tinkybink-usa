# Healthcare API Configuration
NEXT_PUBLIC_API_URL=https://api.tinkybink.com
NEXT_PUBLIC_WS_URL=wss://api.tinkybink.com/ws
NEXT_PUBLIC_ENVIRONMENT=production

# Authentication
NEXT_PUBLIC_AUTH_DOMAIN=auth.tinkybink.com
NEXT_PUBLIC_AUTH_CLIENT_ID=your-client-id

# Clearinghouse Integration
CLEARINGHOUSE_API_KEY=your-clearinghouse-key
CLEARINGHOUSE_API_SECRET=your-clearinghouse-secret
CLEARINGHOUSE_ENDPOINT=https://api.officeally.com

# Payment Processing
STRIPE_PUBLIC_KEY=pk_live_your-stripe-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# AWS Configuration (for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=tinkybink-healthcare-uploads

# Email Service
SENDGRID_API_KEY=your-sendgrid-key
EMAIL_FROM=noreply@tinkybink.com

# Monitoring and Analytics
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
DATADOG_API_KEY=your-datadog-key
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Feature Flags
ENABLE_TELEHEALTH=true
ENABLE_AI_SUGGESTIONS=true
ENABLE_VOICE_COMMANDS=true
ENABLE_MULTI_LANGUAGE=true

# Security
SESSION_SECRET=your-session-secret
ENCRYPTION_KEY=your-encryption-key
JWT_SECRET=your-jwt-secret

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database (for local development)
DATABASE_URL=postgresql://user:password@localhost:5432/tinkybink_healthcare

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Compliance
HIPAA_AUDIT_LOG_RETENTION_DAYS=2555
DATA_RETENTION_POLICY_DAYS=365
ENABLE_AUDIT_LOGGING=true